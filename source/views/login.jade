html
  head
    link(href="stylesheets/screen.css"
      media="screen, projection"
      rel="stylesheet"
      type="text/css")
    link(href="stylesheets/loginPage.css"
      media="screen, projection"
      rel="stylesheet"
      type="text/css")
  title PanthR Login
  body 
    include header
    div#registerForm
      h2 Log in to PanthR
      p= message
      form(name="simple login", 
        action="/login",
        method="POST")
        div
          label(for="email") Email  
          input(type="text", 
            name="email", 
            id="email") 
        div 
          label(for="password") Password 
          input(type="password", 
            name="password", 
            id="password")
        div
          input(type="submit", 
            name="submit", 
            value="Login", 
            id="submit")            
          a(href="/forgotPwd") Forgot Password? 
          a(href="/register") Register!
        //- div
  include footer
  script(src="http://ajax.googleapis.com/ajax/libs/jquery/2.0.0/jquery.min.js"
    type="text/javascript")
  script(src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.10.3/jquery-ui.min.js"
    type="text/javascript")
  script(src="javascripts/register.js")
  
      
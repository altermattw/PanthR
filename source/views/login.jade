html
  head
    link(href="stylesheets/screen.css"
      media="screen, projection"
      rel="stylesheet"
      type="text/css")
      
  title PanthR Login
  body 
    include header
    h1 PanthR Login
    p= message
    form(name="simple login", 
      action="/login",
      method="POST")
      br
      label(for="email") Email  
        input(type="text", 
          name="email", 
          id="email") 
      br 
      label(for="password") Password 
        input(type="password", 
          name="password", 
          id="password")
      br
      label(for="submit")
        br
        input(type="submit", 
          name="submit", 
           value="Login", 
           id="submit")            
    a(href="/forgotPwd") Forgot Password? 
    br
    a(href="/register") Register!
  include footer
  include scripts
      